@charset "UTF-8";
.span-l {
  margin-left: 15px;
}

.r-input {
  width: 230px;
}

.bill-main .header {
  height: 60px;
  display: flex;
  align-items: center;
  padding-left: 20px;
  background-color: #fff;
}

.bill-main .summary {
  display: flex;
  padding: 0 20px;
  margin: 20px 0;
}

.bill-main .summary div {
  flex: 1;
  border-radius: 8px;
  height: 100px;
  margin-right: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.bill-main .summary div.budget {
  background-color: #67c23a;
}

.bill-main .summary div.cost {
  background-color: #409eff;
}

.bill-main .summary div.per {
  background-color: #e6a23c;
}

.bill-main .summary div:last-child {
  margin-right: 0;
}

.bill-main .summary div span {
  color: #fff;
}

.bill-main .summary div .s-title {
  font-size: 20px;
  margin-bottom: 5px;
}

.bill-main .summary div .s-num {
  font-size: 28px;
  font-weight: bold;
}

.bill-main .accordion {
  background-color: #fff;
  padding: 0 20px;
  margin-bottom: 20px;
}

.bill-main .accordion .item {
  display: inline-block;
  width: 33%;
}

.bill-main .accordion .item .name::after {
  content: "ï¼š";
}

.bill-main .fn-btns {
  padding: 20px;
  background-color: #fff;
}

.bill-main .chart-content {
  background-color: #fff;
}

.bill-main .chart-content .groups {
  margin: 20px;
}

.bill-main .chart {
  padding: 20px;
  background-color: #fff;
  box-sizing: border-box;
}

.bill-main .chart #chart {
  width: 100%;
  height: 400px;
  box-sizing: border-box;
}
